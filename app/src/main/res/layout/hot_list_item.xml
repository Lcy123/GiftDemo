<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/hot_list_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/def_loading"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/hot_list_gname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/hot_list_icon"
        android:text="g_name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/hot_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gift"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/hot_list_gname"
        android:layout_alignLeft="@+id/hot_list_gname"
        android:layout_alignStart="@+id/hot_list_gname" />

    <TextView
        android:id="@+id/hot_list_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="size"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/hot_list_icon"
        android:layout_alignLeft="@+id/hot_list_type"
        android:layout_alignStart="@+id/hot_list_type" />

    <TextView
        android:id="@+id/hot_list_num"
        android:text="num"
        android:textColor="#ff0000"
        android:layout_below="@+id/hot_list_gname"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>